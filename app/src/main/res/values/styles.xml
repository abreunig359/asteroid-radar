<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextStyle</item>
    </style>

    <style name="CustomTextStyle" parent="android:Theme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/text_size_item_subtitle</item>
    </style>
    <style name="ItemTitle">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
    </style>
</resources>
